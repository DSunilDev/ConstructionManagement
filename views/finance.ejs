<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Finance Management</title>
    <script>
        function addExpense() {
            let amount = prompt("Enter expense amount:");
            if(amount) {
                let list = document.getElementById("expenseList");
                let li = document.createElement("li");
                li.textContent = `Rs.${amount}`;
                list.appendChild(li);
            }
        }
        function calculateTotal() {
            let items = document.getElementById("expenseList").children;
            let total = 0;
            for(let item of items) {
                total += parseFloat(item.textContent.replace("Rs.", ""));
            }
            alert("Total Expense: Rs." + total);
        }
    </script>
</head>
<body>
    <%- include('navbar') %>
    <center>
    <h1>Finance Management</h1>
    <ul id="expenseList"></ul>
    <button onclick="addExpense()">Add Expense</button>
    <button onclick="calculateTotal()">Calculate Total Expense</button>
    </center>
</body>